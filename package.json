{
  "name": "flare_portal",
  "version": "0.0.0",
  "author": "Torchbox Ltd",
  "private": true,
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": ""
  },
  "browserslist": [
    "> 1% and last 2 versions",
    "Firefox ESR",
    "ios_saf 12",
    "safari 12",
    "ie 11",
    "not ie_mob 11",
    "not android 4.4.3-4.4.4",
    "not OperaMini all"
  ],
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/static_compiled/",
      "/venv/"
    ],
    "collectCoverageFrom": [
      "**/flare_portal/static_src/javascript/**/*.js"
    ]
  },
  "config": {
    "src_css": "./flare_portal/static_src/sass",
    "dest_js": "./flare_portal/static_compiled/js",
    "dest_css": "./flare_portal/static_compiled/css",
    "dist": "./flare_portal/static_compiled"
  },
  "scripts": {
    "//[ Utility ]//": "",
    "serve": "browser-sync start --config browsersync.config.js",
    "reload": "browser-sync reload",
    "clean": "rm -rf $npm_package_config_dist/*",
    "//[ Webpack build ]//": "",
    "compile:prod": "webpack --mode production",
    "compile:dev": "webpack --mode development --progress",
    "compile:watch": "npm run compile:dev -- --watch",
    "//[ Linting & formatting ]//": "",
    "lint:css": "stylelint $npm_package_config_src_css'/**/**' && stylelint --report-needless-disables $npm_package_config_src_css'/**/**'",
    "lint:js": "eslint --report-unused-disable-directives .",
    "lint:format": "prettier --check '**/?(.)*.{md,css,scss,js,json,yaml,yml}'",
    "lint": "npm-run-all -p lint:format lint:js lint:css",
    "format": "prettier --write '**/?(.)*.{md,css,scss,js,json,yaml,yml}'",
    "//[ Tests ]//": "",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "//[ Watches ]//": "",
    "watch:js": "onchange $npm_package_config_dest_js'/**/**' -- npm-run-all -p reload lint:js",
    "watch:css": "onchange $npm_package_config_dest_css -- npm-run-all -p reload lint:css",
    "watch": "npm-run-all -p watch:*",
    "//[ Tasks ]//": "",
    "build": "npm-run-all clean compile:dev",
    "build:prod": "npm-run-all clean compile:prod",
    "start": "npm-run-all clean compile:dev -p compile:watch watch serve --silent"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.0",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.13",
    "copy-webpack-plugin": "^6.2.1",
    "css-loader": "^5.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-config-torchbox": "^0.3.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.1.1",
    "jest": "^26.6.0",
    "mini-css-extract-plugin": "^1.1.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-custom-properties": "^10.0.0",
    "postcss-loader": "^4.0.4",
    "prettier": "^2.1.2",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3",
    "stylelint": "^13.7.2",
    "stylelint-config-torchbox": "^0.5.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.1.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@glidejs/glide": "^3.4.1",
    "@shopify/draggable": "^1.0.0-beta.8",
    "alpinejs": "^2.7.3",
    "js-cookie": "^2.2.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  }
}
